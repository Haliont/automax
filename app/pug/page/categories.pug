extends ../templates/main

block title
	|Товары

block content

	// Содержимое страницы товаров
	section.page-goods.subcategories-level-1
		.container

			include ../modules/sidebar

			//Контейнер для заголовка и списка товаров
			.goods-content

				// Хлебные крошки
				ol.breadcrumbs
					li.breadcrumbs__item 
						a(href="goods.html").breadcrumbs__link Товары

					li.breadcrumbs__item
						span.breadcrumbs__link._active Ваз.Запчасти

				h2.page-title._size-small Ваз.Запчасти

					// Блок с подкатегориями
				.subcategories-list.subcategories
					- var x =16;
					- for (var i=1; i<=x; i++){
					// Ссылка на подкатегорю
					a(href="subcategories-level-1.html").subcategories__item
						.subcategories__img
							img(src="static/img/products/product-1.jpg", alt="Подкатегория")
						.subcategories__caption Ходовая часть
					- }

				// Список товаров
				ul.page-goods__product-list.product-list
					- var x =15;
					- for (var i=1; i<=x; i++){
					// Товар
					li.product-list__item.product

						a(href="product.html").product__img
							img(src="static/img/products/product-1.jpg" alt="Аварийный клапан")

						strong.product__price 100

						strong.product__name Аварийный клапан

						a(href="javascript:void(0);").product__btn.btn Добавить в корзину
					- }

					include ../modules/pagination